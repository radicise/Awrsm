	insns["MRC"] = "";
	insns["MCR2"] = "";
	insns["MRRC"] = "";
	insns["MRRC2"] = "";
	insns["MRS"] = "";
	insns["MSR"] = "";
	insns["MUL"] = "";
	insns["MVN"] = "";
