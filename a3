	insns["SXTH"] = "";
	insns["TEQ"] = "";
	insns["TST"] = "";
	insns["UADD16"] = "";
	insns["UADD8"] = "";
	insns["UADDSUBX"] = "";
	insns["UHADD16"] = "";
	insns["UHADD8"] = "";
	insns["UHADDSUBX"] = "";
	insns["UMAAL"] = "";
	insns["UMLAL"] = "";
	insns["UMULL"] = "";
	insns["UQADD16"] = "";
	insns["UQADD8"] = "";
	insns["UQADDSUBX"] = "";
	insns["UQSUB16"] = "";
	insns["UQSUB8"] = "";
	insns["UQSUBADDX"] = "";
	insns["USAD8"] = "";
	insns["USADA8"] = "";
	insns["USAT"] = "";
	insns["USAT16"] = "";
	insns["USUB16"] = "";
	insns["USUB8"] = "";
	insns["USUBADDX"] = "";
	insns["UXTAB"] = "";
	insns["UXTAB16"] = "";
	insns["UXTAH"] = "";
	insns["UXTB"] = "";
	insns["UXTB16"] = "";
	insns["UXTH"] = "";
	forms["shifter_operand"] = 1;
	forms["S"] = 2;
	forms["Rg"] = 3;
	forms["cond"] = 4;
	conds["EQ"] = "0000";
	conds["NE"] = "0001";
	conds["CS"] = "0010";
	conds["HS"] = "0010";
	conds["CC"] = "0011";
	conds["LO"] = "0011";
	conds["MI"] = "0100";
	conds["PL"] = "0101";
	conds["VS"] = "0110";
	conds["VC"] = "0111";
	conds["HI"] = "1000";
	conds["LS"] = "1001";
	conds["GE"] = "1010";
	conds["LT"] = "1011";
	conds["GT"] = "1100";
	conds["LE"] = "1101";
	conds["AL"] = "1110";
	hexAlphas["A"] = 10;
	hexAlphas["B"] = 11;
	hexAlphas["C"] = 12;
	hexAlphas["D"] = 13;
	hexAlphas["E"] = 14;
	hexAlphas["F"] = 15;
	shifters["LSL"] = 0;
	shifters["LSR"] = 1;
	shifters["ASR"] = 2;
	shifters["ROR"] = 3;
	binHex["0000"] = "0";
	binHex["0001"] = "1";
	binHex["0010"] = "2";
	binHex["0011"] = "3";
	binHex["0100"] = "4";
	binHex["0101"] = "5";
	binHex["0110"] = "6";
	binHex["0111"] = "7";
	binHex["1000"] = "8";
	binHex["1001"] = "9";
	binHex["1010"] = "a";
	binHex["1011"] = "b";
	binHex["1100"] = "c";
	binHex["1101"] = "d";
	binHex["1110"] = "e";
	binHex["1111"] = "f";
	insnEndianness = 0;
	counter = 0;#TODO Allow specification of the starting address
}
NF {
	for (a = $1; a; a = substr(a, 1, length(a) - 1)) {
		if (asUpper(a) in insns) {
			break;
		}
	}
	if (!a) {
		exit(1);
	}
	a = asUpper(a);
	if (!(insns[a])) {
		exit(1);
	}
	split(insns[a], b, ";");
	form = substr($0, length(a) + 1);
	split("", e);
	split("", h);
	lexNum = 0;
	for (pos in b) {
		lex = substr(b[pos], length(b[pos]), 1);
		if ((lex - 3) > lexNum) {
			lexNum = lex - 3;
		}
		if (lex in e) {
			h[pos] = b[pos];
		}
		else {
			e[lex] = b[pos] ":" (pos + 10);
		}
	}
	for (lex = 0; 1; lex++) {
		if (lex == 10) {
			if ("X" in e) {
				lex = "X";
				pos = substr(e[lex], length(e[lex]) - 1, 2) - 10;
				if (substr(e[lex], 1, 1) == "b") {
					b[pos] = substr(e[lex], 2, length(e[lex]) - 7);
				}
				else {
					exit(105);
				}
			}
			break;
		}
		if (!(lex in e)) {
			continue;
		}
		pos = substr(e[lex], length(e[lex]) - 1, 2) - 10;
		b[pos] = parseForm(a, e[lex]);
	}
	for (pos in h) {
		if (substr(h[pos], 1, 1) == "b") {
			b[pos] = substr(h[pos], 2, length(h[pos]) - 4);
			continue;
		}
		lex = substr(h[pos], length(h[pos]), 1);
		split(h[pos], y, ":");
		if (!(3 in y)) {
			exit(101);
		}
		t1 = y[2];
		split(t1, y, "-");
		if (!(2 in y)) {
			exit(102);
		}
		seq = b[substr(e[lex], length(e[lex]) - 1, 2) - 10];
		b[pos] = substr(seq, length(seq) + 1 - (y[2] - y[1]) - y[1], y[2] - y[1]);
	}
	for (lex in e) {
		if (substr(e[lex], 1, 1) == "b") {
			continue;
		}
		seq = b[pos = (substr(e[lex], length(e[lex]) - 1, 2) - 10)];
		split(e[lex], y, ":");
		if (!(4 in y)) {
			exit(103);
		}
		t1 = y[2];
		split(t1, y, "-");
		if (!(2 in y)) {
			exit(104);
		}
		b[pos] = substr(seq, length(seq) + 1 - (y[2] - y[1]) - y[1], y[2] - y[1]);
	}
	c = "";
	pos = 0;
	while ((++pos) in b) {
		c = c b[pos];
	}
	if (length(c) % 8) {
		exit(109);
	}
	insnSiz = length(c) / 8;
	d = "";
	if (insnEndianness) {
		for (pos = 0; pos < insnSiz; pos++) {
			d = d " " binHex[substr(c, (pos * 8) + 1, 4)] binHex[substr(c, (pos * 8) + 5, 4)];
		}
		d = substr(d, 2);
	}
	else {
		for (pos = 0; pos < insnSiz; pos++) {
			d = binHex[substr(c, (pos * 8) + 1, 4)] binHex[substr(c, (pos * 8) + 5, 4)] " " d;
		}
		d = substr(d, 1, length(d) - 1);
	}
	print(d);
	counter += insnSiz;
}
function parseForm(insn, fieldDef) {
	split(fieldDef, p1, ":");
	if (!(4 in p1)) {
		exit(106);
	}
	if (p1[3] >= 4) {
		FS = ","#TODO Account for commas in addressing forms
		$0 = form;
		$1 = $1;#TODO Is this necessary?
		if (NF < (p1[3] - 3)) {
			exit(1);
		}
		if ((p1[3] - 3) == lexNum) {
			n1 = $(lexNum);
			for (n2 = lexNum + 1; n2 <= NF; n2++) {
				n1 = n1 "," $(n2);
			}
		}
		else if ((p1[3] - 3) < lexNum) {
			n1 = $(p1[3] - 3);
		}
		else {
			exit(107);
		}
		FS = " ";
		$0 = n1;
		$1 = $1;#TODO Is this necessary?
		txt = $0;
	}
	if (!(p1[1] in forms)) {
		exit(107);
	}
	n1 = forms[p1[1]];
	if (n1 == 1) {
		if (substr(txt, 1, 1) == "#") {
			nImm = asBin(getImm(txt, 2), 32);
			for (n2 = 1; n2 < 33; n2++) {
				if (substr(nImm, n2, 1) == "1") {
					break;
				}
			}
			n2--;
			for (n3 = 32; n3 >= 1; n3--) {
				if (substr(nImm, n3, 1) == "1") {
					break;
				}
			}
			n3 = 32 - n3;
			n4 = (32 - n2) - n3;
			if (n4 == 8) {
				if (n3 % 2) {
					exit(1);
				}
				nRot = ((n2 / 2) + 4) % 16;
				nPatt = substr(nImm, n2 + 1, 8);
			}
			else if (n4 < 8) {
				if (n2 % 2) {
					n2 -= 1;
					n4 += 1;
				}
				nRot = ((n2 / 2) + 4) % 16;
				nPatt = substr(nImm nImm, n2 + 1, 8);
			}
			else {
				nImt = substr(nImm, 17, 16) substr(nImm, 1, 16);
				for (n2 = 1; n2 < 33; n2++) {
					if (substr(nImt, n2, 1) == "1") {
						break;
					}
				}
				n2--;
				for (n3 = 32; n3 >= 1; n3--) {
					if (substr(nImt, n3, 1) == "1") {
						break;
					}
				}
				n3 = 32 - n3;
				n4 = (32 - n2) - n3;
				if (n4 == 8) {
					if (n3 % 2) {
						exit(1);
					}
					nRot = ((n2 / 2) + 12) % 16;
					nPatt = substr(nImt, n2 + 1, 8);
				}
				else if (n4 < 8) {
					if (n2 % 2) {
						n2 -= 1;
						n4 += 1;
					}
					nRot = ((n2 / 2) + 12) % 16;
					nPatt = substr(nImt, n2 + 1, 8);
				}
				else {
					exit(1);
				}
			}
			return "1" asBin(nRot, 4) nPatt;
		}
		n2 = asBin(getReg(txt, 1), 4);
		if (n3 = match(txt, ",")) {
			txt = substr(txt, n3 + 1);
			$0 = txt;
			$1 = $1;#TODO Is this necessary?
			txt = $0;
			if ((n3 = asUpper(substr(txt, 1, 3))) == "RRX") {
				return "000000110" n2;
			}
			if (n3 in shifters) {
				txt = substr(txt, 5);
				if (substr(txt, 1, 1) == "#") {
					return "0" asBin(getImm(txt, 2), 5) asBin(shifters[n3], 2) "0" n2;
				}
				return "0" asBin(getReg(txt, 1), 4) "0" asBin(shifters[n3], 2) "1" n2;
			}
			exit(1);
		}
		return "000000000" n2;
	}
	else if (n1 == 2) {
		if (asUpper(substr(form, 1, 1)) == "S") {
			form = substr(form, 2);
			return "1";
		}
		return "0";
	}
	else if (n1 == 3) {
		return asBin(getReg(txt, 1), 4);
	}
	else if (n1 == 4) {
		if ((n2 = asUpper(substr(form, 1, 2))) in conds) {
			form = substr(form, 3);
			return conds[n2];
		}
		return "1110";
	}
	else {
		exit(108);
	}
}
function asUpper(s) {
	return toupper(s);
}
function asBin(a, b) {
	a = int(a + 0);#TODO Is the addition of zero necessary?
	if (a < 0) {
		a = (-a - 1);
		binNeg = 1;
	}
	else {
		binNeg = 0;
	}
	binRes = "";
	for (; b != 0; b--) {
		binRes = (binNeg ? ((a + 1) % 2) : (a % 2)) binRes;
		a = int(a / 2);
	}
	return binRes;
}
function getImm(strImm, place) {
	if ((immDig = substr(strImm, place, 1)) == "-") {
		immNeg = 1;
		place++;
	}
	else {
		if (immDig == "+") {
			place++;
		}
		immNeg = 0;
	}
	if ((immDig = substr(strImm, place, 1)) == "0") {
		if (asUpper(immDig = substr(strImm, ++place, 1)) == "X") {
			immRes = 0;
			while ((immDig = asUpper(substr(strImm, ++place, 1))) ~ /[0123456789ABCDEF]/) {
				immRes = (immRes * 16) + ((immDig ~ /[ABCDEF]/) ? (hexAlphas[immDig]) : (immDig));
			}
			return (immNeg ? (-immRes) : (immRes));
		}
		else if (immDig ~ /[01234567]/) {
			immRes = immDig + 0;
			while ((immDig = substr(strImm, ++place, 1)) ~ /[01234567]/) {
				immRes = (immRes * 8) + immDig;
			}
			return (immNeg ? (-immRes) : (immRes));
		}
		else if (asUpper(immDig) == "B") {
			immRes = 0;
			while ((immDig = substr(strImm, ++place, 1)) ~ /[01]/) {
				immRes = (immRes * 2) + immDig;
			}
			return (immNeg ? (-immRes) : (immRes));
		}
		return 0;
	}
	else if (immDig ~ /[123456789]/) {
		immRes = immDig + 0;
		while ((immDig = substr(strImm, ++place, 1)) ~ /[0123456789]/) {
			immRes = (immRes * 10) + immDig;
		}
		return (immNeg ? (-immRes) : (immRes));
	}
	exit(1);
}
function getReg(strReg, place) {
		if (!(asUpper(substr(strReg, place, 1)) == "R")) {
			exit(1);
		}
		if ((reg2 = getImm(txt, place + 1)) < 0) {
			exit(1);
		}
		if (reg2 >= 16) {
			exit(1);
		}
		return reg2;
}
